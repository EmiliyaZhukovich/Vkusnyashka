<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Vkusnyashka1.Pages.CartPage"
             Title="СТАТУС ЗАКАЗА"
             BackgroundColor="#FFEFEF">

    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Padding="20" Spacing="20">
        <!-- Номер заказа -->
        <Label x:Name="OrderNumberLabel"
               Text="Номер заказа: 001"
               FontSize="24"
               FontAttributes="Bold"
               TextColor="Black"
               HorizontalOptions="Center"/>

        <!-- Статус заказа -->
        <Label x:Name="OrderStatusLabel"
               Text="Заказ ОФОРМЛЕН"
               FontSize="20"
               FontAttributes="Italic"
               TextColor="Green"
               HorizontalOptions="Center"/>


        <!-- Картинка статуса -->
        <Image Source="order.png"
               WidthRequest="150"
               HeightRequest="150"
               Aspect="AspectFit"
               HorizontalOptions="Center"/>
    </StackLayout>
</ContentPage>
